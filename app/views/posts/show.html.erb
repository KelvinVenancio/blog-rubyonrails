<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Enviado <%= time_ago_in_words(@post.created_at) %> atr√°s | <%= link_to 'Editar', edit_post_path(@post) %> - 
		<%= link_to 'Deletar', post_path(@post), method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %>
	</p>

	<p class="body">
		<%= @post.body %>
	</p>
</div>